<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/bg_parent_rounded_corner"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:background="@color/accent"
        android:orientation="vertical"
        android:id="@+id/exp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="SHUT Clininc is as a part of “NIMHANS centre for well-being”with objectives of : "
            android:layout_gravity="center"
            android:textStyle="bold"
            android:padding="20dp"
            android:textSize="23sp"
            android:id="@+id/textView1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_weight="50"
            android:padding="20dp"
            android:text="•	Bringing awareness about the addictive potential of emerging problem through awareness program/lecture and media(print and visual)\n\n • Training manpower through workshops\n\n • Developing assessment tools and intervention for the same.
"
            android:layout_marginBottom="16dp"
            android:textSize="20sp" />


    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
   android:layout_margin="3dp"

    card_view:cardElevation="3dp"
    card_view:contentPadding="2dp"
    android:foreground="?selectableItemBackground"



    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@color/accent"
            android:id="@+id/item_image"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"

            android:text="1.Acknowledge the presence of excessive use of technology"
            android:textStyle="bold"
            android:textSize="23sp"
            android:textColor="#FFFFFF"
            android:id="@+id/suggestion_title" />

        <TextView
            android:padding="20dp"
            android:id="@+id/suggeston_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_image"

            android:text="It is first step toward promotion of healthy use of technology.\n\nI.Keep a log of your online activities for each day.\n \n II keep a log of activities you are missing due to your engagement with online activities and others are raising concerns about your online activities\n\n III. Identify the situations associated with excessive use of online activities e.g boredom, lonliness etc.IV. Help your to understand /differentiate the work , recreational  nonpurposive  use of online activities"
            android:textSize="20sp" />




    </RelativeLayout>
</android.support.v7.widget.CardView>